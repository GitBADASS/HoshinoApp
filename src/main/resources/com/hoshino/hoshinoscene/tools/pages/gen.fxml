<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" minHeight="9.0" minWidth="300.0" prefHeight="534.0" prefWidth="400.0" stylesheets="@../../stylesheet/normal.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hoshino.hoshinoscene.tools.GenController">
   <VBox prefWidth="400.0" VBox.vgrow="ALWAYS">
      <children>
         <VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0">
            <children>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label styleClass="normal" text="库名称">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </Label>
                     <TextField fx:id="name" prefHeight="25.0" styleClass="wordsInput">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </TextField>
                     <Button fx:id="clearName" mnemonicParsing="false" styleClass="settingsBtn" text="x" />
                  </children>
               </HBox>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label styleClass="normal" text="库描述">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </Label>
                     <TextArea fx:id="description" prefHeight="99.0" prefWidth="161.0" style="-fx-control-inner-background: #f4f4f4;" styleClass="scroll-bar" wrapText="true">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </TextArea>
                     <VBox prefHeight="200.0" prefWidth="37.0" style="-fx-border-color: #c2c2c2; -fx-border-width: 1 1 1 0;">
                        <children>
                           <Button fx:id="clearDescription" mnemonicParsing="false" styleClass="settingsBtn" text="x" />
                        </children>
                     </VBox>
                  </children>
               </HBox>
               <HBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
                  <children>
                     <VBox alignment="CENTER" prefHeight="200.0" prefWidth="305.0">
                        <children>
                           <VBox prefHeight="160.0" prefWidth="100.0" style="-fx-border-color: #c2c2c2;">
                              <children>
                                 <HBox prefHeight="25.0" prefWidth="100.0" style="-fx-border-color: #e9e9e9;">
                                    <children>
                                       <Button fx:id="addElement" mnemonicParsing="false" prefWidth="40.0" styleClass="littleBtn" text="+" />
                                       <Button mnemonicParsing="false" prefWidth="40.0" styleClass="littleBtn" text="-" />
                                    </children>
                                 </HBox>
                                 <ListView fx:id="elementsList" prefHeight="200.0" prefWidth="200.0" />
                              </children></VBox>
                        </children>
                     </VBox>
                  </children>
               </HBox>
            </children>
         </VBox>
         <HBox alignment="CENTER" prefHeight="80.0" prefWidth="400.0">
            <children>
               <HBox alignment="CENTER_LEFT" prefWidth="200.0">
                  <children>
                     <Button mnemonicParsing="false" prefWidth="65.0" styleClass="settingsBtn" text="取消">
                        <HBox.margin>
                           <Insets left="5.0" right="5.0" />
                        </HBox.margin></Button>
                  </children>
                  <padding>
                     <Insets left="10.0" />
                  </padding>
               </HBox>
               <HBox alignment="CENTER_RIGHT" prefWidth="200.0">
                  <children>
                     <Button fx:id="save" mnemonicParsing="false" styleClass="settingsBtn" text="保存">
                        <HBox.margin>
                           <Insets left="5.0" right="5.0" />
                        </HBox.margin>
                     </Button>
                  </children>
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
                  <padding>
                     <Insets right="10.0" />
                  </padding>
               </HBox>
            </children>
         </HBox>
         <VBox alignment="CENTER" prefHeight="60.0" prefWidth="400.0">
            <children>
               <Label fx:id="warnText" alignment="CENTER" prefHeight="60.0" prefWidth="400.0" styleClass="warn" text="保存失败，请检查书写是否规范" />
            </children>
         </VBox>
      </children>
   </VBox>
</VBox>
