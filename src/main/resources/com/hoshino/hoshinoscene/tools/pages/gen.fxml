<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" minHeight="9.0" minWidth="300.0" prefHeight="534.0" prefWidth="400.0" stylesheets="@../../stylesheet/normal.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hoshino.hoshinoscene.tools.GenController">
   <VBox prefWidth="400.0" VBox.vgrow="ALWAYS">
      <children>
         <VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0">
            <children>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label styleClass="normal" text="填写英语">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </Label>
                      <TextField fx:id="en" styleClass="wordsInput" />
                     <Button fx:id="clearEn" mnemonicParsing="false" prefWidth="0.0" styleClass="settingsBtn" text="x">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label styleClass="normal" text="填写中文">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </Label>
                      <TextField fx:id="cn" prefWidth="161.0" styleClass="wordsInput" />
                     <Button fx:id="clearCn" mnemonicParsing="false" styleClass="settingsBtn" text="x">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label styleClass="normal" text="库名称">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </Label>
                     <TextField fx:id="name" prefWidth="161.0" styleClass="wordsInput">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </TextField>
                     <Button fx:id="clearCn1" mnemonicParsing="false" styleClass="settingsBtn" text="x" />
                  </children>
               </HBox>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label styleClass="normal" text="库描述">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </Label>
                     <TextArea fx:id="description" prefHeight="200.0" prefWidth="200.0" style="-fx-control-inner-background: #f4f4f4;" styleClass="scroll-bar" wrapText="true">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </TextArea>
                  </children>
               </HBox>
            </children>
         </VBox>
         <HBox alignment="CENTER" prefHeight="80.0" prefWidth="400.0">
            <children>
               <HBox alignment="CENTER_LEFT" prefWidth="200.0">
                  <children>
                     <Button mnemonicParsing="false" prefWidth="65.0" styleClass="settingsBtn" text="取消">
                        <HBox.margin>
                           <Insets left="5.0" right="5.0" />
                        </HBox.margin></Button>
                  </children>
                  <padding>
                     <Insets left="10.0" />
                  </padding>
               </HBox>
               <HBox alignment="CENTER_RIGHT" prefWidth="200.0">
                  <children>
                     <Button fx:id="save" mnemonicParsing="false" styleClass="settingsBtn" text="保存">
                        <HBox.margin>
                           <Insets left="5.0" right="5.0" />
                        </HBox.margin>
                     </Button>
                  </children>
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
                  <padding>
                     <Insets right="10.0" />
                  </padding>
               </HBox>
            </children>
         </HBox>
         <VBox alignment="CENTER" prefHeight="60.0" prefWidth="400.0">
            <children>
               <Label fx:id="warnText" alignment="CENTER" prefHeight="60.0" prefWidth="400.0" styleClass="warn" text="保存失败，请检查书写是否规范" />
            </children>
         </VBox>
      </children>
   </VBox>
</VBox>
